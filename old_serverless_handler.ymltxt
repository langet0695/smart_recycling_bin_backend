functions:

  healthCheck:
      handler: handler.healthCheck
      events:
       - http:
           path: /healthCheck
           method: get

  getAllFiles:
    handler: handler.getAllFiles
    environment:
      BUCKET: smart-recycling-bin-images
    events:
     - http:
         path: /getAllFiles
         method: get

  uploadFile:
    handler: handler.uploadFile
    events:
     - http:
         path: /uploadFile
         method: post

  detectFace:
    handler: handler.detectFace
    environment:
      BUCKET: smart-recycling-bin-images
    events:
     - http:
         path: /detectFace
         method: post

  detectLabel:
      handler: handler.detectLabel
      environment:
        BUCKET: smart-recycling-bin-images
      events:
       - http:
           path: /detectLabel
           method: post

  uploadImg:
    handler: handler.uploadImg
    environment:
        BUCKET: smart-recycling-bin-images
    events:
     - http:
         path: /uploadImg
         method: post